pipeline{
    agent any
    tools{
        maven 'MAVEN'
        dockerTool 'DOCKER_HOME'
    }

    environment {
        CI = true
        ARTIFACTORY_ACCESS_TOKEN = credentials('az-container-artifactory-token')
    }
    
    stages{
        stage('Download from Artifactory') {
          steps{
            rtDownload (
              buildName: 'restro.war',
              buildNumber: '1',
              serverId: 'jfrog-artifactory',
              spec: '''{
                        "files": [
                          {
                            "pattern":"restro-mvn-local/restro.war",
                            "target": "/var/jenkins_home/workspace/ci-maven-artifactory/target/restro-built.war"
                          }
                        ]
              }'''
            )

            sh 'date'
            
            sh 'ls -a /var/jenkins_home/workspace/ci-maven-artifactory/target/'
        }
    }
  }
}